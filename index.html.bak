<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>CHAFF</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="manifest" href="manifest.json">
</head>

<body>
    <div class="header">
        <div class="brand">
            <h1>CHAFF</h1>
        </div>
        <div class="header-actions">
            <div class="profile-dot"></div>
        </div>
    </div>

    <div class="sub-header">
        <div class="stats-counter">
            <span class="count-number" id="header-count">0</span>
            <span class="count-label">Total logged coffees</span>
        </div>
        <button class="sort-btn" onclick="app.openSortModal()">Sort</button>
    </div>

    <div class="container">
        <div id="coffee-list" class="coffee-grid">
            <!-- Coffees will be injected here -->
        </div>
        <div id="empty-state" style="text-align: center; padding: 40px; color: #999; display: none;">
            <p>No coffees yet. Tap + to add one!</p>
        </div>
    </div>

    <div class="fab-container" onclick="app.openAddModal()">
        <span class="fab-label">Log Coffee</span>
        <button class="fab">+</button>
    </div>

    <!-- Add/Edit Coffee Modal -->
    <div id="add-modal" class="modal" onclick="if(event.target === this) app.closeModal('add-modal')">
        <div class="modal-content">
            <h2 style="margin-top: 0;" id="modal-title">Add Coffee</h2>

            <div class="form-group">
                <label class="form-label">Roaster</label>
                <input list="roasters-list" id="roaster-input" class="form-input" placeholder="e.g. Onyx Coffee Lab">
                <datalist id="roasters-list"></datalist>
            </div>

            <div class="form-group">
                <label class="form-label">Coffee Name</label>
                <input type="text" id="name-input" class="form-input" placeholder="e.g. Geometry">
            </div>

            <div class="form-group">
                <label class="form-label">Origin (Country)</label>
                <input list="origins-list" id="origin-input" class="form-input" placeholder="e.g. Ethiopia">
                <datalist id="origins-list"></datalist>
            </div>

            <div class="form-group">
                <label class="form-label">Region (Optional)</label>
                <input list="regions-list" id="region-input" class="form-input" placeholder="e.g. Yirgacheffe">
                <datalist id="regions-list"></datalist>
            </div>

            <div class="form-group">
                <label class="form-label">Process (Optional)</label>
                <input list="processes-list" id="process-input" class="form-input" placeholder="e.g. Washed">
                <datalist id="processes-list"></datalist>
            </div>

            <div class="form-group">
                <label class="form-label">Varietal (Optional)</label>
                <input list="varietals-list" id="varietal-input" class="form-input" placeholder="e.g. Heirloom">
                <datalist id="varietals-list"></datalist>
            </div>

            <div class="form-group">
                <label class="form-label">Brew Methods (Select at least one)</label>
                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="brew-pourover" value="Pour Over">
                        <label for="brew-pourover">Pour Over</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="brew-espresso" value="Espresso">
                        <label for="brew-espresso">Espresso</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="brew-aeropress" value="Aeropress">
                        <label for="brew-aeropress">Aeropress</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="brew-oxo" value="OXO Rapid Brewer">
                        <label for="brew-oxo">OXO Rapid Brewer</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Location</label>
                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="loc-home" value="Home">
                        <label for="loc-home">Home</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="loc-cafe" value="Café">
                        <label for="loc-cafe">Café</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Rating: <span id="rating-display">7</span>/10</label>
                <input type="range" id="rating-input" min="1" max="10" step="0.5" value="7" class="form-input">
            </div>

            <div class="form-group">
                <label class="form-label">Tasting Notes (Select exactly 4)</label>
                <div id="tags-container" class="tags-grid"></div>
            </div>

            <button class="btn btn-primary" onclick="app.saveCoffee()">Save</button>
            <button class="btn btn-secondary" onclick="app.closeModal('add-modal')">Cancel</button>
            <button id="delete-btn-in-modal" class="btn btn-danger" onclick="app.requestDeleteFromModal()"
                style="display: none; margin-top: 20px;">Delete Coffee</button>
        </div>
    </div>

    <!-- Stats Modal -->
    <div id="stats-modal" class="modal" onclick="if(event.target === this) app.closeModal('stats-modal')">
        <div class="modal-content">
            <h2 style="margin-top: 0;">Stats</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <span class="stat-num" id="stat-total">0</span>
                    <span class="stat-label">Total Coffees</span>
                </div>
                <div class="stat-card">
                    <span class="stat-num" id="stat-roasters">0</span>
                    <span class="stat-label">Roasters</span>
                </div>
                <div class="stat-card">
                    <span class="stat-num" id="stat-origins">0</span>
                    <span class="stat-label">Origins</span>
                </div>
                <div class="stat-card">
                    <span class="stat-num" id="stat-rating">0</span>
                    <span class="stat-label">Avg Rating</span>
                </div>
                <div class="stat-card">
                    <span class="stat-num" id="stat-processes">0</span>
                    <span class="stat-label">Processes</span>
                </div>
                <div class="stat-card">
                    <span class="stat-num" id="stat-varietals">0</span>
                    <span class="stat-label">Varietals</span>
                </div>
            </div>
            <button class="btn btn-secondary" onclick="app.closeModal('stats-modal')"
                style="margin-top: 20px;">Close</button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="delete-modal" class="modal" onclick="if(event.target === this) app.closeModal('delete-modal')">
        <div class="modal-content">
            <h2 style="margin-top: 0;">Delete Coffee?</h2>
            <p>Are you sure you want to delete this coffee entry? This action cannot be undone.</p>
            <button class="btn btn-danger" onclick="app.confirmDelete()">Delete</button>
            <button class="btn btn-secondary" onclick="app.closeModal('delete-modal')">Cancel</button>
        </div>
    </div>

    <!-- Sort Modal -->
    <div id="sort-modal" class="modal" onclick="if(event.target === this) app.closeModal('sort-modal')">
        <div class="modal-content">
            <h2 style="margin-top: 0;">Sort By</h2>
            <button class="btn btn-secondary" onclick="app.applySort('date')">Date Added (Newest)</button>
            <button class="btn btn-secondary" onclick="app.applySort('roaster')">Roaster (A-Z)</button>
            <button class="btn btn-secondary" onclick="app.applySort('origin')">Origin (A-Z)</button>
            <button class="btn btn-secondary" onclick="app.applySort('process')">Process (A-Z)</button>
            <button class="btn btn-secondary" onclick="app.applySort('variety')">Variety (A-Z)</button>
